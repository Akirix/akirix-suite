{{#email-wrapper}}
    {{> header title="Invitation from {{@root.from_name}}"}}
    <tr>
        <td align="center">
            <table width="680" border="0" cellpadding="0" cellspacing="0">
                <tbody>
                    <tr><td colspan="3" height="28"></td></tr>
                    <tr>
                        <td width="40"></td>
                        <td width="600" style="font-family:sans-serif,Avenir,Arial;font-size:16px;line-height:22px;color:#424242;">
                            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="font-weight:100">
                                <tbody>
                                    {{spacer size=30}}
                                    {{#if @root.name}}
                                        {{#row}}<span style="color:#777777;">Dear {{@root.name}},</span>{{/row}}
                                        {{spacer}}
                                    {{/if}}
                                    {{#row}}
                                        <span style="font-size:16px;color:#777777">You have been invited to join Akirix. Enjoy the world of faster, secure payments. Registration is quick and simple.</span>
                                    {{/row}}
                                    {{spacer size=30}}
                                    {{#table-row key=0}}
                                        <td style="text-align:center">
                                            {{#new-button href="https://www.xxx.com"}}LEARN MORE{{/new-button}}
                                        </td>
                                    {{/table-row}}
                                    {{new-sign-off}}
                                    {{spacer size=30}}
                                </tbody>
                            </table>
                        </td>
                        <td colspan="3" height="28"></td>
                    </tr>
                </tbody>
            </table>
        </td>
    </tr>
    {{> footer}}
{{/email-wrapper}}


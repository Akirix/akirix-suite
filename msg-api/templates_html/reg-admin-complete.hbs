{{#email-wrapper}}
    {{> header title="Registration Complete"}}
    {{#email-content}}
        <table border="0" cellpadding="0" cellspacing="0" width="100%" style="text-align:center;">
            <tbody>

            {{#row}}<span style="color: #777777;">The registration for</span>{{/row}}
            {{spacer size=10}}
            {{#row}}
                <span
                    style="font-size:24px;line-height:24px;font-weight:bold;letter-spacing:1px;">{{@root.user_name}}</span>
                <br>
                {{#if @root.company_name}}
                    <span
                        style="font-size:14px;line-height:20px;color:#999999;">{{@root.company_name}}</span>
                {{/if}}
            {{/row}}
            {{spacer size=10}}
            {{#row}}<span style="color: #777777;">has been completed.</span>{{/row}}

            {{sign-off}}
            </tbody>
        </table>
    {{/email-content}}
    {{> footer}}
{{/email-wrapper}}

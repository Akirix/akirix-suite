{{#email-wrapper}}
    {{> header title="Withdrawal Requested"}}
    {{#email-content}}
        <table border="0" cellpadding="0" cellspacing="0" width="100%" style="text-align:center;">
            <tbody>

            {{#row}}<span style="color: #777777;">Hello {{@root.first_name}},</span>{{/row}}
            {{spacer}}
            {{#row}}
                <span style="color: #777777;">
                    We have received your withdrawal request: <strong>{{@root.wire_name}}</strong>. You will receive another notification once the request has been completed.
                </span>
            {{/row}}

            {{sign-off}}
            </tbody>
        </table>
    {{/email-content}}
    {{> footer}}
{{/email-wrapper}}

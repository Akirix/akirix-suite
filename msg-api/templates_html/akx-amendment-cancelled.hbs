{{#email-wrapper}}
    {{> header title="Products/Rates Update Request"}}
    {{#email-content}}
        <table border="0" cellpadding="0" cellspacing="0" width="100%" style="text-align:center;">
            <tbody>

            {{#row}}<span style="color: #777777;">Hello {{@root.first_name}},</span>{{/row}}
            {{spacer}}
            {{#row}}
                <span style="color: #777777;">
                The products/rates update request for project <strong>{{@root.project_name}}</strong> has been cancelled by the originator.
                </span>
            {{/row}}
            {{sign-off}}
            </tbody>
        </table>
    {{/email-content}}
    {{> footer}}
{{/email-wrapper}}

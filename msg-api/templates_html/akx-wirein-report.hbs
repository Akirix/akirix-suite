{{#email-wrapper}}
    {{> header title="Wire In W-{{@root.wire.name}} Created"}}
    {{#email-content}}
        <table border="0" cellpadding="0" cellspacing="0" width="100%" style="text-align:center;">
            <tbody>

            {{#row}}A wire has been created for {{@root.company.name}} XYZ{{@root.company.account_number}}.{{/row}}
            {{spacer}}
            {{#row}}
                <span style="font-size:24px;line-height:24px;font-weight:bold;letter-spacing:1px;">
                    Amount: {{{@root.currency.symbol}}}{{@root.wire.amount}}
                </span>
            {{/row}}
            {{spacer}}

            <tr>
                <td align="center">

                    <table border="0" cellpadding="0" cellspacing="0" width="100%" style="text-align:left; width: 360px;">
                        <tbody>
                        <tr>
                            <td><strong>Bank Country:</strong></td>
                            <td>{{@root.wire.bank_country}}</td>
                        </tr>
                        <tr>
                            <td><strong>Bank Name:</strong></td>
                            <td>{{@root.wire.bank_name}}</td>
                        </tr>
                        <tr>
                            <td><strong>SWIFT:</strong></td>
                            <td>{{@root.wire.code_swift}}</td>
                        </tr>
                        <tr>
                            <td><strong>ABA:</strong></td>
                            <td>{{@root.wire.code_aba}}</td>
                        </tr>
                        <tr>
                            <td><strong>Account Holder:</strong></td>
                            <td>{{@root.wire.account_holder}}</td>
                        </tr>
                        <tr>
                            <td><strong>Account Number:</strong></td>
                            <td>{{@root.wire.account_number}}</td>
                        </tr>
                        <tr>
                            <td><strong>User:</strong></td>
                            <td>{{@root.user.first_name}} {{@root.user.last_name}} ({{@root.user.email}})</td>
                        </tr>

                        </tbody>
                    </table>

                </td>
            </tr>

            {{sign-off}}
            </tbody>
        </table>
    {{/email-content}}
    {{> footer}}
{{/email-wrapper}}

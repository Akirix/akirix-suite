{{#email-wrapper}}
    {{> header title="Invoice Payment Sent"}}
    {{#email-content}}
        <table border="0" cellpadding="0" cellspacing="0" width="100%" style="text-align:center;">
            <tbody>

            {{#row}}<span style="color: #777777;">Hello {{@root.first_name}},</span>{{/row}}
            {{spacer}}
            {{#row}}
                <span style="color: #777777;">
                    You have sent a payment of <strong>{{{@root.currency}}}{{@root.amount}}</strong> on invoice <strong>{{@root.invoice_name}}</strong> to <strong>{{@root.to_company}}</strong>.
                </span>
            {{/row}}

            {{sign-off}}
            </tbody>
        </table>
    {{/email-content}}
    {{> footer}}
{{/email-wrapper}}

<header class="akx-header">
    <span>{{stringList.bankIdTitle}}</span>
</header>
{{find-bank action=(action 'redraw') changeset=changeset}}
{{#if allowIntBank}}
    <div class="col-6 has-feedback form-check form-check-inline pl-3 offset-4 pt-3">
        <label class="form-check-label">
            {{stringList.hasIntBank}}
            {{input checked=changeset.use_intermediary_bank type='checkbox' class="form-check-input"}}
            <span class="form-check-sign">
                <span class="check"></span>
            </span>
        </label>
    </div>
{{/if}}
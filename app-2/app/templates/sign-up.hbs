<div class="login">
    <header>
        <img src="/assets/akirix-logo.svg" alt="Akirix-icon">
    </header>
    <div>
        <h3>{{stringList.signUp}}</h3>
        <div>
            <p>{{stringList.signUpHelp}}</p>
            {{#akx-form action="signUp" isLocked=isLocked}}
                <div class="has-feedback form-group bmd-form-group">
                    <label class="bmd-label-floating">{{stringList.email}}</label>
                    {{input type='text' value=changeset.email class='form-control'}}
                    {{validation-feedback errors=changeset.error.email.validation}}
                </div>
                <div class="has-feedback form-group bmd-form-group">
                    <label class="bmd-label-floating">{{stringList.emailConfirmation}}</label>
                    {{input value=changeset.emailConfirmation type='text' class='form-control'}}
                    {{validation-feedback errors=changeset.error.emailConfirmation.validation}}
                </div>
                <div class="has-feedback form-group bmd-form-group">
                    <label class="bmd-label-floating">{{stringList.password}}</label>
                    {{input value=changeset.password type='password' class='form-control'}}
                    {{validation-feedback errors=changeset.error.password.validation}}
                    {{password-strength changeset=changeset}}
                </div>
                <div class="has-feedback form-group bmd-form-group">
                    <label class="bmd-label-floating">{{stringList.passwordConfirmation}}</label>
                    {{input value=changeset.passwordConfirmation type='password' class='form-control'}}
                    {{validation-feedback errors=changeset.error.passwordConfirmation.validation}}
                </div>
                <button type="submit" class="btn btn-primary w-100 mt-4">{{stringList.submit}}</button>
            {{/akx-form}}
            <div class="links">
                {{#link-to 'login'}}{{stringList.logIn}}{{/link-to}}
                {{#link-to 'forgot'}}{{stringList.forgotPassword}}{{/link-to}}
            </div>
        </div>
    </div>
</div>

<header id="section-header" class="akx-header">
    <span>{{stringList.templateNameTitle}}</span>
</header>
{{#akx-form name='frm-tempale-name' action='' class='mt-5'}}
    <div class="row">
        <div class="col-lg-4 col-md-8 col-sm-10 m-auto has-feedback form-group bmd-form-group">
            <label for="input-transfer-notes" class="bmd-label-floating">{{stringList.nameLabel}}</label>
            {{input name='input-template-name' value=changeset.name type='text' class='form-control'}}
            {{validation-feedback errors=changeset.error.name.validation}}
        </div>
    </div>
    <div class="row mt-5">
        <div id="grp-transfer-notes" class="col-lg-8 col-md-10 col-sm-12 m-auto has-feedback form-group bmd-form-group">
            <label for="input-transfer-notes" class="bmd-label-floating">{{stringList.notesLabel}}</label>
            {{input 
                id="input-transfer-notes" 
                name="input-transfer-notes" 
                class="form-control" 
                value=changeset.notes type="text"}}
            {{validation-feedback errors=changeset.error.notes.validation}}
        </div>
    </div>
{{/akx-form}}

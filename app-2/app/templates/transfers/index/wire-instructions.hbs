<h2>{{stringList.header}}</h2>
<header id="section-header" class="akx-header">
    <span>{{stringList.subTitle}}</span>
</header>
<div class="row mt-5">
    <div class="col-lg-8 col-md-10 col-sm-12 m-auto">
        <table class="table table-hover">
            <tbody>
                {{#each model as |account|}}
                    {{#link-to 'authenticated.transfers.wire-instructions.view' account.id
			id=account.name
                        tagName='tr'}}
                    <td>
                        <strong>{{{account.currencySymbol}}}</strong>
                    </td>
                    <td>
                        {{account.name}}
                    </td>
                    <td>
                        {{format-number account.balance style='currency' currency=account.currency_id}}
                    </td>
                    {{/link-to}}
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<header id="section-header" class="akx-header">
    <span class="text-primary">{{stringList.accountTransfer}}</span>
</header>
<div class="row">
    <div class="col-lg-6 col-md-8 col-sm-10 m-auto">
        <div class="text-center pt-5">
            <h3>{{model.fromAccount.name}}</h3>
        </div>
        <div class="text-center">
            <p>{{stringList.to}}</p>
            <h3>{{model.toAccount.name}}</h3>
        </div>
        <div class="row">
            <div class="col-12 border-bottom"></div>
        </div>
        <div class="row">
            <div class="col-6">
                <h3>{{stringList.amount}}</h3>
            </div>
            <div class="col-6 text-right">
                <h3>
                    {{format-number model.amount style='currency' currency=model.toAccount.currency_id}}
                </h3>
            </div>
        </div>
    </div>
</div>
<div class="row text-center mt-5">
    <div class="col-lg-4 col-md-8 col-sm-10 m-auto text-success">
        <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
            <circle class="checkmark__circle" cx="26" cy="26" r="25" fill="none"/>
            <path class="checkmark__check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8"/>
        </svg>
        <p class="font-h2">{{stringList.success}}</p>
        <p>{{successMessage}}</p>
    </div>
    <div class="col-12 pt-3">
        <button id="btn-back-to-transfers" {{action 'backToTransfers'}} class="btn btn-primary" type="button">
            {{stringList.backToTransfers}}
        </button>
        {{#link-to 'authenticated.transfers.wire-options'
            id="btn-submit-another-transfer"
            tagName='button'
            type='button'
            class="btn btn-primary ml-2"}}
            {{stringList.submitAnotherTransfer}}
        {{/link-to}}
    </div>
</div>
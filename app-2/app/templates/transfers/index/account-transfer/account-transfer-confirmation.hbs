<header id="section-header" class="akx-header">
    <span class="text-primary">{{stringList.accountTransfer}}</span>
</header>
<div class="row">
    <div class="col-lg-6 col-md-8 col-sm-10 m-auto">
        <div class="text-center pt-5">
            <h3>{{fromAccount.name}}</h3>
        </div>
        <div class="text-center">
            <p>{{stringList.to}}</p>
            <h3>{{toAccount.name}}</h3>
        </div>
        <div class="row">
            <div class="col-12 border-bottom"></div>
        </div>
        <div class="row">
            <div class="col-6">
                <h3>{{stringList.amount}}</h3>
            </div>
            <div class="col-6 text-right">
                <h3>
                    {{format-number changeset.amount style='currency' currency=toAccount.currency_id}}
                </h3>
            </div>
        </div>
    </div>
</div>

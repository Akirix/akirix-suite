<header id="section-header" class="akx-header">
        <span>{{stringList.selectAccountFrom}}</span>
</header>
<div class="row mt-5">
    <div class="col-lg-8 col-md-10 col-sm-12 m-auto">
        <table id="tbl-account-select" class="table table-hover">
            {{#akx-select
                name="tbl-account-select"
                value=changeset.from_account_id
                next=(action 'nextStep' 1)
                choices=model.accounts as |account key|}}
                <td name="tbl-account-select-col-symbol-{{key}}">
                    <strong>{{{account.currencySymbol}}}</strong>
                </td>
                <td name="tbl-account-select-col-name-{{key}}">
                    {{account.name}}
                </td>
                <td name="tbl-account-select-col-balance-{{key}}">
                    {{format-number account.balance style='currency' currency=account.currency_id}}
                </td>
            {{/akx-select}}
        </table>
    </div>
</div>
<div class="row">
    <div class="col-12 text-center text-danger">
        {{validation-feedback errors=changeset.error.account_id.validation}}
    </div>
</div>

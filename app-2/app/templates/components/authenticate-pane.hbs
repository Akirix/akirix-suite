<header class="akx-header mt-5">
    <span>{{stringList.header}}</span>
</header>
<div class="row mt-3">
    <div class="col-lg-6 col-md-8 col-sm-12 m-auto">
        <p class="text-center">{{stringList.description}}</p>
        {{#akx-form action=(action 'authenticate' changeset) name="frm-two-factor-auth" isLocked=isLocked class='mt-3'}}
            <div class="row justify-content-center">
                <div class="col-4">
                    <i class="akx-icon akx-text-message font-h1"></i>
                    <h4 class="margin-top-15">{{stringList.smsIcon}}</h4>
                    <p class="margin-top-15 font-14">{{stringList.smsDescription}}</p>
                </div>
                {{#if hasApp}}
                    <div class="col-4">
                        <i class="akx-icon akx-outline font-h1"></i>
                        <h4 class="margin-top-15">{{stringList.appIcon}}</h4>
                        <p class="margin-top-15 font-14">{{stringList.appDescription}}</p>
                    </div>
                {{/if}}
                {{#if hasKey}}
                    <div class="col-4">
                        <i class="akx-icon akx-yubikey font-h1"></i>
                        <h4 class="margin-top-15">{{stringList.keyIcon}}</h4>
                        <p class="margin-top-15 font-14">{{stringList.keyDescription}}</p>
                    </div>
                {{/if}}
            </div>
            <div class="row justify-content-center">
                <div class="col-4">
                    <button  id="btn-two-factor-sms" {{action 'twoFactorSms' }} class="btn btn-primary btn-sm" type="button">
                        {{stringList.requestSMS}}
                    </button>
                </div>
                {{#if hasApp}}
                    <div class="col-4"></div>
                {{/if}}
                {{#if hasKey}}
                    <div class="col-4"></div>
                {{/if}}
            </div>
            <div class="form-row mt-5">
                <div class="offset-4 col-2">
                    {{input
                    value=codePart1
                    name='input-first-3-digits'
                    type='text'
                    class='form-control text-center input1'
                    maxlength="3"}}
                </div>
                <div class="col-2">
                    {{input
                    value=codePart2
                    name='input-last-3-digits'
                    type='text'
                    maxlength="3"
                    class='form-control text-center input2'}}
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-12 has-feedback text-danger text-center">
                    {{validation-feedback errors=errors}}
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12 text-center">
                    <button id="btn-two-factor-cancel" class="akx-button" type="button" {{action 'cancelTwoFactorPane'}}>
                        <span class="orange">{{stringList.cancel}}</span>
                    </button>
                    <button id="btn-two-factor-authenticate" class="btn btn-primary ml-2" type="submit">
                        {{stringList.authenticate}}
                    </button>
                </div>
            </div>
        {{/akx-form}}
    </div>
</div>
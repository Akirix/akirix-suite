<style>
    body {
        min-height: 1100px;
    }

    .table tbody tr {
        border-top: 1px solid #f5f5f5;
    }

    .table tbody tr td {
        border: none;
    }

    .akxblue {
        background-color: #58595b;
    }
</style>

<div class="row akxblue" style="padding: 10px; color: #fff;">
    <div class="col-xs-8">
        <span style="font-size:2em;">{{@root.invoice.company.name}}</span><br/>
        XYZ{{@root.invoice.company.account_number}}
        {{#if @root.invoice.company.address}}<span style="font-size: 0.6em;">&diams;</span> {{@root.invoice.company.address}}{{/if}}
        {{#if @root.invoice.company.city}}<span style="font-size: 0.6em;">&diams;</span> {{@root.invoice.company.city}}{{/if}}
        , {{@root.invoice.company.state_province}} {{@root.invoice.company.postal_code}}
        {{#if @root.invoice.company.country}}<span style="font-size: 0.6em;">&diams;</span> {{@root.invoice.company.country}}{{/if}}
    </div>
    <div class="col-xs-4" style="text-align:right;">
        {{#if @root.invoice.company.website}}<i class="fa fa-globe fa-fw"></i> {{@root.invoice.company.website}}<br>{{/if}}
        {{#if @root.invoice.company.email}}<i class="fa fa-envelope-o fa-fw"></i> {{@root.invoice.company.email}}<br>{{/if}}
        {{#if @root.invoice.company.phone}}<i class="fa fa-phone fa-fw"></i> {{@root.invoice.company.phone}}<br>{{/if}}
    </div>
</div>

<div class="row" style="padding: 10px;">
    <div class="col-xs-7">
        <span style="font-size: 2em; color:#525a5c;"><b>Invoice Number: I-{{@root.invoice.name}}</b></span><br>
        {{#if @root.invoice.invoice_period_from}}
            {{#if @root.invoice.invoice_period_to}}
                <span style="font-size: 0.8em; color:#666666;">
                    Period: <strong>{{date date=@root.invoice.invoice_period_from}}</strong>
                to <strong>{{date date=@root.invoice.invoice_period_to}}</strong>
                </span>
            {{/if}}
        {{/if}}

    </div>
</div>

<div style="height: 40px;"></div>

<div class="row" style="padding:10px;">
    <div class="col-xs-6 medium">
        <strong style="color:#525a5c;">Bill to:</strong>

        <div style="height: 5px;"></div>

        <div><b>{{@root.invoice.to_company_name}}</b><br>
            {{#if @root.invoice.to_company_account_number}}
                <span class="small">XYZ{{@root.invoice.to_company_account_number}}</span><br>
            {{/if}}
            {{#if @root.invoice.to_company_address}}{{@root.invoice.to_company_address}}<br>{{/if}}
            {{#if @root.invoice.to_company_city}}{{@root.invoice.to_company_city}}, {{/if}}
            {{#if @root.invoice.to_company_state}}{{@root.invoice.to_company_state}} {{/if}}
            {{#if @root.invoice.to_company_postal_code}}{{@root.invoice.to_company_postal_code}}<br>{{/if}}
            {{#if @root.invoice.to_company_country}}{{@root.invoice.to_company_country}}{{/if}}
        </div>
    </div>

    <div class="col-xs-6 medium">
        <table style="float: right; border: 1px solid #525a5c; width: 100%;">
            <tbody>
            <tr>
                <td class="col-xs-6 align-center akxblue" style="color:#fff; padding: 20px">
                    <span class="medium">Please Pay:</span><br>
                    <strong>{{{@root.invoice.invoice_total}}}</strong>
                </td>
                <td class="col-xs-6 align-center">
                    <span class="medium">Date:</span><br/>
                    <strong>{{date date=@root.invoice.invoice_date}}</strong>
                </td>
            </tr>
            </tbody>
        </table>

    </div>
</div>

<div class="row" style="margin-top: 50px; padding: 10px;">
    <div class="col-xs-12">
        <table class="table">
            <thead>
            <tr style="color: #525a5c;">
                <th class="col-xs-4"><b>Item Name</b></th>
                <th class="col-xs-2"><b>Unit</b></th>
                <th class="col-xs-3"><b>Price ($)</b></th>
                <th class="col-xs-2"><b>Quantity</b></th>
                <th class="col-xs-2"><b>Subtotal</b></th>
            </tr>
            </thead>
        <tbody>
            {{#each @root.invoice.invoice_items}}
            <tr>
                <td>{{name}}</td>
                <td>{{unit}}</td>
                <td>{{{price}}}</td>
                <td>{{quantity}}</td>
                <td>{{{subtotal}}}</td>
            </tr>
            </tbody>
            {{/each}}
        </table>
    </div>

    <div class="col-xs-7">
        {{#if @root.invoice.notes}}
            <div class="akxblue text-center" style="line-height: 50px; height: 50px; color: #fff;">
                Notes
            </div>
            <div style="border: 1px solid #525a5c; padding: 15px;">
                <span class="small">{{@root.invoice.notes}}</span>
            </div>
        {{/if}}
    </div>
    <div class="col-xs-5">
        <table class="table align-right">
            <tbody>
            <tr>
                <td colspan="4" class="text-right">
                    <strong>Sub Total:</strong>
                </td>
                <td>{{{@root.invoice.invoice_subtotal}}}</td>
            </tr>
            <tr>
                <td colspan="4" class="text-right">
                    <strong>Tax Rate ({{@root.invoice.tax_rate}}%)</strong>
                </td>
                <td>{{{@root.invoice.invoice_tax}}}</td>
            </tr>
            <tr>
                <td colspan="4" class="text-right large">
                    <strong>Invoice Total:</strong>
                </td>
                <td class="large">{{{@root.invoice.invoice_total}}}<br></td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
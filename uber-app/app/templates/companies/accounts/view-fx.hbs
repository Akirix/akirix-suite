<div class="viewport viewport-t-pane-secondary viewport-t-pane-secondary-with-toolbar scroll-y">
    {{#if model.transaction.model}}
        {{slide-task-list model=model.transaction.model model_id=model.transaction.model_id
                          company_id=model.transaction.company_id}}
    {{else}}
        {{slide-task-list model='Transaction' model_id=model.transaction.id company_id=model.transactioncompany_id}}
    {{/if}}
    <div class="pane-secondary-content">
        <div class="panel panel-default">
            <div class="panel-heading text-center">
                <span class="text-blue bold">
                    FX-{{model.fxRequest.name}}
                </span>
            </div>
            <div class="panel-body">
                <div style="height: 20px;"></div>
                <div class="row">
                    <div class="col-sm-4 align-center">
                        <h3>{{{model.fxRequest.baseCurrency.symbol}}}{{model.fxRequest.str_base_amount}}</h3>
                    </div>
                    <div class="col-sm-4 align-center">
                        <h1><i class="fa fa-arrow-right"></i></h1>
                    </div>
                    <div class="col-sm-4 align-center">
                        <h3>{{{model.fxRequest.counterCurrency.symbol}}}{{model.fxRequest.str_counter_amount}}</h3>
                    </div>
                </div>
                {{#if model.fxRequest.notes}}
                    <hr>
                    <div style="height: 10px;"></div>
                    <div class="row">
                        <div class="col-md-12">
                            {{model.fxRequest.notes}}
                        </div>
                    </div>
                    <hr>
                {{/if}}

            </div>
            <div style="height: 10px;"></div>
            <div class="row">
                <div class="col-md-12 medium align-center">
                    Customer Rate: {{model.fxRequest.str_customer_rate}}<br/>
                    Base Rate: {{model.fxRequest.str_base_rate}}<br/>
                    Type: {{model.fxRequest.str_type}}<br/>
                </div>
            </div>
            <div style="height: 20px;"></div>
            <div class="panel-footer align-center">
                <div><strong>Confirmation: </strong>{{model.fxRequest.confirmation}}</div>
                <div><strong>Reference: </strong>{{model.fxRequest.reference}}</div>
            </div>
        </div>
    </div>
</div>
<div class="viewport viewport-bottom navbar-toolbar">
    <div class="pane-actions">
        <ul class="list-h">
            <button {{action 'goBack'}} class="btn btn-default navbar-secondary-btn btn-sm" type="button">Back
            </button>
        </ul>
        <ul class="list-h pull-right">
            <li>
            </li>
        </ul>
    </div>
</div>

{{#akx-form action='issueRefund' isLocked=isLocked }}
    <div class="viewport viewport-t-pane-secondary viewport-t-pane-secondary-with-toolbar scroll-y">
        <div class="pane-secondary-content">
            <div class="row top-buffer">
                <legend>
                    <span>Issue Refund</span>
                </legend>
                <div class="form-group col-xs-6 has-feedback">
                    <label>Amount:</label>
                    {{formatted-number realValue=data.amount type='text' class='form-control' placeholder='0.00'}}
                    {{validation-feedback errors=errors.data.amount validated=validated}}
                </div>
                <div class="form-group col-md-12 has-feedback">
                    <label>Notes:</label>
                    {{textarea value=data.notes class='form-control' rows='7' placeholder='Reason refund'}}
                    {{validation-feedback errors=errors.data.notes validated=validated}}
                </div>
            </div>
        </div>
    </div>
    <div class="viewport viewport-bottom navbar-toolbar">
        <div class="pane-actions">
            <ul class="list-h">
                <li>
                    <button {{action 'cancel'}} class="btn btn-default navbar-secondary-btn btn-sm" type="goBack">
                        Cancel
                    </button>
                </li>
            </ul>
            <ul class="list-h pull-right">
                <li>
                    {{view 'modal-confirmation'
                           class='btn btn-primary btn-sm navbar-secondary-btn'
                           button='Issue Refund'
                           action='issueRefund'
                           headerTitle='Create Fee Refund'
                           prompt='Are you sure you want to issue the Fee Refund'
                    }}
                </li>
            </ul>
        </div>
    </div>
{{/akx-form}}

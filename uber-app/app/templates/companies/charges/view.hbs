<div class="viewport viewport-t-pane-secondary viewport-t-pane-secondary-witd-toolbar scroll-y">
    {{slide-task-list model='Charge' model_id=model.id company_id=model.company_id}}
    <div class="pane-secondary-content">
        <div class="panel panel-default">
            <div class="panel-heading text-center">
                <span class="bold">
                    {{model.title}}
                </span>
            </div>
            <div class="panel-body">
                <div class="align-left">
                    <table class="table table-striped">
                        <tbody>
                        <tr>
                            <td class="col-xs-4 bold">Frequency</td>
                            <td>{{model.frequency}} {{model.frequency_type}}</td>
                        </tr>
                        <tr>
                            <td class="col-xs-4 bold">Fee Counter</td>
                            <td>{{model.fee_counter}}</td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                {{model.notes}}
                            </td>
                        </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="viewport viewport-bottom navbar-toolbar">
    <div class="pane-actions">
        <ul class="list-h">
            <li>
                <button {{action 'goBack'}} class="btn btn-default navbar-secondary-btn btn-sm" type="button">Back
                </button>
            </li>
        </ul>
        <ul class="list-h pull-right">
            {{#if model.canCancel}}
                <li>
                    {{view 'modal-confirmation'
                    class='btn btn-danger btn-sm navbar-secondary-btn'
                    button='Cancel'
                    action='cancelCharge'
                    headerTitle='Cancel Charge'
                    prompt='Are you sure you want to cancel this charge item?'
                    }}
                </li>
            {{/if}}
        </ul>
    </div>
</div>

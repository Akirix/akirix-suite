{{#akx-form action='addSecurityQuestion' isLocked=isLocked}}
    <div class="viewport viewport-t-pane-secondary viewport-t-pane-secondary-with-toolbar scroll-y">
        <div class="pane-secondary-content">
            <legend>New Security Question</legend>
            <div class="row">
                <div class="form-group col-md-12 required has-feedback">
                    <label>Question</label>
                    {{input value=securityQuestion.question type='text' class='form-control' placeholder='Security Question'}}
                    {{validation-feedback errors=errors.securityQuestion.question validated=validated}}
                </div>
                <div class="form-group col-xs-12 required has-feedback">
                    <label>Answer</label>
                    {{input value=securityQuestion.answer type='text' class='form-control' placeholder='Answer'}}
                    {{validation-feedback errors=errors.securityQuestion.answer validated=validated}}
                </div>
            </div>
        </div>
    </div>
    <div class="viewport viewport-bottom navbar-toolbar">
        <div class="pane-actions">
            <ul class="list-h">
                <li>
                    <button class="btn btn-default btn-sm navbar-secondary-btn" {{action 'goBack'}}>
                        Back
                    </button>
                </li>
            </ul>
            <ul class="list-h pull-right">
                <li>
                    <button class="btn btn-success btn-sm navbar-secondary-btn" type="submit">Submit Question</button>
                </li>
            </ul>
        </div>
    </div>
{{/akx-form}}
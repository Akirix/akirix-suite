<style>
    .document {
        min-width: 60px;
        max-width: 100%;
    }
</style>
<div class="viewport viewport-t-pane-secondary viewport-t-pane-secondary-with-toolbar scroll-y">
    <div class="pane-secondary-content">
        <legend>
            {{model.name}}

        </legend>
        <div class="document row">
            <div class="col-md-12">
                {{#link-to 'registrations.view.verification.view-document-modal' model.registrationDocument._id}}
                    {{#if isImage}}
                        {{{iframeImage}}}
                    {{else}}
                        {{{iframe}}}
                    {{/if}}
                {{/link-to}}
            </div>
        </div>
    </div>
</div>
<div class="viewport viewport-bottom navbar-toolbar">
    <div class="pane-actions">
        <ul class="list-h">
            <li>
                <a class="btn btn-default btn-sm navbar-secondary-btn" target="_blank"
                   style="padding: 5px 10px;" {{bind-attr href=downloadUrl}}><i class="fa fa-download fa-fw"></i></a>
            </li>
        </ul>
    </div>
</div>

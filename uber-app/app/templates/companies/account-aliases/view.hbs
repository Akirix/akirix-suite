{{#akx-form action='deactivateAccountAlias' isLocked=isLocked}}
    <div class="viewport viewport-t-pane-secondary viewport-t-pane-secondary-with-toolbar scroll-y">
        <div class="pane-secondary-content">
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                <span class="text-blue bold">
                    Preferred Account Number
                </span>
                </div>
                <div class="panel-body">
                    <div style="height: 20px;"></div>
                    <div class="x-large align-center">
                        {{model.company.name}}
                    </div>
                    <div class="small align-center">
                        XYZ{{model.company.account_number}}
                    </div>
                    <div class="x-large align-center">
                        {{model.account.name}}
                    </div>
                    {{#if hasClient}}
                        <div style="height: 10px;"></div>
                        <div class="row">
                            <div class="col-md-12">
                                <hr>
                            </div>
                        </div>
                        <div style="height: 20px;"></div>
                        <div class="x-large align-center">
                            {{model.clientCompany.name}}
                        </div>
                        <div class="small align-center">
                            XYZ{{model.clientCompany.account_number}}
                        </div>
                        <div class="x-large align-center">
                            {{model.clientAccount.name}}
                        </div>
                    {{/if}}
                    <div style="height: 10px;"></div>
                    <div class="row">
                        <div class="col-md-12">
                            <hr>
                        </div>
                    </div>
                    <div style="height: 20px;"></div>
                    <div class="small align-left">
                        {{model.notes}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="viewport viewport-bottom navbar-toolbar">
        <div class="pane-actions">
            <ul class="list-h">
                <li>
                    <button class="btn btn-default btn-sm navbar-secondary-btn" {{action 'goBack'}}>
                        Back
                    </button>
                </li>
            </ul>
            <ul class="list-h pull-right">
                {{#if isActive}}
                    <li>
                        <button class="btn btn-danger btn-sm navbar-secondary-btn" type="submit">
                            Deactivate
                        </button>
                    </li>
                {{/if}}
            </ul>
        </div>
    </div>

{{/akx-form}}

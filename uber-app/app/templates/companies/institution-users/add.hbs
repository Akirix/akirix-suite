{{#akx-form action='createInstitutionUser' isLocked=isLocked}}
    <div class="viewport viewport-t-pane-secondary viewport-t-pane-secondary-with-toolbar scroll-y">
        <div class="pane-secondary-content">
            <div class="row">
                <div class="col-xs-12">
                    <label>Copy Existing Platform User</label>
                    {{#x-select value=theExistingUser class='form-control' action="selectExistingUser"}}
                        {{#x-option}}Select a user{{/x-option}}
                        {{#each existingUser in userList}}
                            {{#x-option value=existingUser }}{{existingUser.first_name}} {{existingUser.last_name}} ; {{existingUser.email}} ; {{existingUser.phone_mobile}}{{/x-option}}
                        {{/each}}
                    {{/x-select}}
                </div>
            </div>

            <div class="row top-buffer">
                <div class="form-group col-xs-6 has-feedback">
                    <label>First Name</label>
                    {{input value=user.first_name type='text' class='form-control' placeholder='First Name'}}
                    {{validation-feedback errors=errors.user.first_name validated=validated}}
                </div>
                <div class="form-group col-xs-6 has-feedback">
                    <label>Last Name</label>
                    {{input value=user.last_name type='text' class='form-control' placeholder='Last Name'}}
                    {{validation-feedback errors=errors.user.last_name validated=validated}}
                </div>
                <div class="form-group col-xs-6 has-feedback">
                    <label>Email</label>
                    {{input value=user.email type='email' class='form-control' placeholder='Email'}}
                    {{validation-feedback errors=errors.user.email validated=validated}}
                </div>
                <div class="form-group col-xs-6 has-feedback">
                    <label>Mobile Phone</label>
                    {{input value=user.phone_mobile type='tel' class='form-control' placeholder='Mobile Number'}}
                    {{validation-feedback errors=errors.user.phone_mobile validated=validated}}
                </div>
            </div>
        </div>
    </div>
    <div class="viewport viewport-bottom navbar-toolbar">
        <div class="pane-actions">
            <ul class="list-h">
                <li>
                    <button class="btn btn-default btn-sm navbar-secondary-btn" {{action 'goBack'}}>
                        Cancel
                    </button>
                </li>
            </ul>
            <ul class="list-h pull-right">
                <li>
                    <button class="btn btn-primary btn-sm navbar-secondary-btn" type="submit">
                        Add
                    </button>
                </li>
            </ul>
        </div>
    </div>
{{/akx-form}}

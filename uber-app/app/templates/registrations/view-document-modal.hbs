<style>
    #view-document-modal img.document {
        max-width: 100%;
    }

    .modal-dialog {
        text-align: center;
        width: 100%;
    }

    .modal-content {
        display: inline-block;
        max-width: 96vw;
    }
</style>
<div id="view-document-modal" class="modal fade in" style="display: block">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                {{#link-to 'registrations.view.verification.view-document' model.registrationDocument._id  tagName="button" class="close" data-dismiss="modal" aria-label="Close"}}
                    <span aria-hidden="true">&times;</span>
                {{/link-to}}
                <h4 class="modal-title">
                    {{model.document.name}}
                </h4>
            </div>
            <div class="modal-body">
                <div class="document row">
                    <div class="col-md-12">
                        {{#if isImage}}
                            <img {{bind-attr alt=model.name src=srcUrl}} class="document">
                        {{else}}
                            {{{iframe}}}
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

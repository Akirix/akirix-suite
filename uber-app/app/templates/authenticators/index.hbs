<table class="table table-hover">
    <thead>
    <tr>
        <th class="col-md-4">Device Name</th>
        <th class="col-md-3">Created</th>
        <th class="col-md-3">Last Used</th>
        <th class="col-md-2">Status</th>
    </tr>
    </thead>
    <tbody>
    {{#each auth in authenticators}}
        {{#link-to 'authenticators.index.view' auth.id tagName='tr' class='list-link'}}
            <td class="col-md-6 valign-middle large">
                {{authenticator-icon auth.type}} {{auth.name}}
            </td>
            <td class="col-md-2 small valign-middle">
                {{auth.str_created_at_date}}
            </td>
            <td class="col-md-2 small valign-middle">
                {{auth.str_updated_at_date}}<br/>
                {{auth.str_updated_at_time}}
            </td>
            <td class="col-md-1 small valign-middle">
                {{authenticator-status auth.status}}
            </td>
        {{/link-to}}
    {{/each}}
    </tbody>
</table>
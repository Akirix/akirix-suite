{{#akx-form action='createUberEmailTemplate' isLocked=isLocked}}
    <div class="viewport viewport-t-pane-secondary viewport-t-pane-secondary-with-toolbar scroll-y">
        <div class="pane-secondary-content">
            <div class="row">
                <div class="form-group col-xs-6 has-feedback required">
                    <label>Name</label>
                    {{input value=uber-email-template.name type='text' class='form-control' placeholder='Template Name'}}
                    {{validation-feedback errors=errors.uber-email-template.name validated=validated}}
                </div>
            </div>
            <div class="row">
                <div class="form-group col-xs-6">
                    <label>Model</label>
                    {{view 'select'
                           value=uber-email-template.model
                           content=modelList
                           optionValuePath='content.modelValue'
                           optionLabelPath='content.modelName'
                           prompt='Select A Model'
                           class='form-control'
                    }}
                </div>
                <div class="form-group col-xs-6">
                    <label>From Email</label>
                    {{input value=uber-email-template.email type='text' class='form-control' placeholder='From Email Address'}}
                </div>
                <div class="form-group col-xs-12 has-feedback required">
                    <label>Subject</label>
                    {{input value=uber-email-template.subject type='text' class='form-control' placeholder='Subject'}}
                    {{validation-feedback errors=errors.uber-email-template.subject validated=validated}}
                </div>
            </div>
            <div class="row">
                <div class="form-group col-xs-12">
                    <a href="https://guides.github.com/features/mastering-markdown">Markdown Syntax Guide</a>
                </div>
            </div>
            <div class="col-xs-12 form-group">
                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active"><a style="background-color: inherit !important" href="#content" aria-controls="home" role="tab" data-toggle="tab">Content</a></li>
                    <li role="presentation"><a style="background-color: inherit !important" href="#preview" aria-controls="profile" role="tab" data-toggle="tab">Preview</a></li>
                </ul>
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane fade in active" id="content">
                        <br>
                        <div class="col-xs-12 form-group has-feedback">
                            <label>Content</label>
                            {{textarea value=uber-email-template.content class="form-control width-full" rows="15"}}
                            {{validation-feedback errors=errors.model.content validated=validated}}
                        </div>
                    </div>
                    <div role="tabpanel" class="tab-pane fade" id="preview">
                        <br>
                        <div class="col-xs-12 form-group">
                            {{{akx-markdown-preview markdownContent=uber-email-template.content}}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="viewport viewport-bottom navbar-toolbar">
        <div class="pane-actions">
            <ul class="list-h">
                <li>
                    <button class="btn btn-default btn-sm navbar-secondary-btn" {{action 'goBack'}}>
                        Cancel
                    </button>
                </li>
            </ul>

            <ul class="list-h pull-right">
                <li>
                    <button class="btn btn-primary btn-sm navbar-secondary-btn" type="submit">
                        Add
                    </button>
                </li>
            </ul>
        </div>
    </div>
{{/akx-form}}
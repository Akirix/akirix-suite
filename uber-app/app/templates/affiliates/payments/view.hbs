<div class="viewport viewport-t-pane-secondary viewport-t-pane-secondary-with-toolbar scroll-y">
    {{slide-task-list model='CommissionPayment' model_id=commission_payment_id }}
    <div class="pane-secondary-content">
        <p class="contextual-help-header">Payment Details</p>
        <table class="table table-high table-hover">
            <thead>
            <tr>
                <th>Company</th>
                <th>Period From</th>
                <th>Period To</th>
                <th>Rate</th>
                <th>Amount</th>
            </tr>
            </thead>
            <tbody>
            {{#each item in model}}
                <tr>
                    <td>XYZ{{item.company.account_number}} {{item.company.name}}</td>
                    <td>{{item.str_period_from}}</td>
                    <td>{{item.str_period_to}}</td>
                    <td>{{item.str_rate}}</td>
                    <td>{{{item.currency.symbol}}}{{item.str_amount}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>
<div class="viewport viewport-bottom navbar-toolbar">
    <div class="pane-actions">
        <ul class="list-h">
            <li>
                {{#link-to 'affiliates.payments.index' tagName='button'
                           class='btn btn-default navbar-secondary-btn btn-sm'}}
                    Back{{/link-to}}
            </li>
        </ul>
    </div>
</div>

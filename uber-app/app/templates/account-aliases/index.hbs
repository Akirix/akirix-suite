{{advanced-search searchParams=searchParams parentController=this showDateRange=false}}
{{page-numbers content=content}}
<table class="table table-hover">
    <thead>
    <tr>
        <th class="col-xs-3">Preferred Account Number</th>
        <th class="col-xs-3">IBAN</th>
        <th class="col-xs-3">Company</th>
        <th class="col-xs-2">Bank</th>
        <th class="col-xs-1">Status</th>
    </tr>
    </thead>
    <tbody>
    {{#each alias in model}}
        {{#link-to 'account-aliases.index.view' alias.id tagName='tr' class='list-link'}}
            <td class="valign-middle">
                <strong>{{alias.name}}</strong>
            </td>
            <td class="valign-middle">
                <strong>{{alias.iban}}</strong>
            </td>
            <td class="valign-middle">
                {{alias.company.name}}<br/>
                XYZ{{alias.company.account_number}}
            </td>
            <td class="valign-middle">
                {{alias.wireInstruction.name}}<br/>
            </td>
            <td class="valign-middle">
                {{account-alias-status-icon alias.status}}
            </td>
        {{/link-to}}
    {{/each}}
    </tbody>
</table>
{{page-numbers content=content}}

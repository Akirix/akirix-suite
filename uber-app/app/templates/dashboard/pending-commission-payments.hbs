<legend>Commission Payments</legend>
{{#if hasNewPayments}}
    <table class="table table-hover">
        <thead>
        <tr>
            <th class="col-xs-2">Payout Date</th>
            <th class="col-xs-6">Affiliate</th>
            <th class="col-xs-3">Amount</th>
            <th class="col-xs-1">Status</th>
        </tr>
        </thead>
        <tbody>
        {{#each payment in model}}
            {{#link-to 'dashboard.pending-commission-payments.view' payment.id tagName='tr' class='list-link'}}
                <td class="small valign-middle">
                    <b>{{payment.str_payout_date}}</b>
                </td>
                <td class="valign-middle">
                    XYZ {{payment.affiliate.account_number}} {{payment.affiliate.name}}
                </td>
                <td class="large valign-middle">
                    {{{payment.currency.symbol}}}{{payment.str_amount}}
                </td>
                <td>
                    {{commission-payment-status-icon payment.status}}
                </td>
            {{/link-to}}
        {{/each}}
        </tbody>
    </table>
{{else}}
    <div class="align-center valign-middle text-gray-light" style="padding: 100px; background-color: #f2f4f5; ">
        No Pending Commission Payments
    </div>
{{/if}}

<div id="modal-confirmation" class="modal fade in" style="display: block">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-body">
                <button {{action 'closeModal'}} type="button" class="close" data-dismiss="modal"><span
                        aria-hidden="true">&times;</span><span
                        class="sr-only">Close</span></button>
                {{#if modal.headerTitle}}
                    <h4 class="modal-title"><strong>{{modal.headerTitle}}</strong></h4>
                {{else}}
                    <h4 class="modal-title">&nbsp;</h4>
                {{/if}}
                {{#if modal.prompt}}
                    {{{modal.prompt}}}
                {{/if}}
            </div>
            <div class="modal-footer">
                <button {{action 'closeModal'}} type="button" class="btn btn-default float-left"
                                                data-dismiss="modal">Cancel
                </button>
                <button {{action 'confirm' target=modal.targetView}} type="button" class="btn btn-primary float-right"
                                                                     data-dismiss="modal">OK
                </button>
            </div>
        </div>
    </div>
</div>

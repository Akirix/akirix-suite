<fieldset>
    {{#if view.isLoading}}
        <div class="loading text-gray-light text-center " style="font-size: 100px;">
            <div class="spinner-wrapper">
                <i class="fa fa-spinner fa-spin"></i>
            </div>
        </div>
    {{/if}}
    <div class="row top-buffer">
        <div class="col-md-6 col-center text-center">
            <h2>Two Factor Authentication</h2>

            <p class="text-gray-light">
                The feature you are trying access requires additional security measure. In order to
                proceed, please enter the code generated by one of the available methods
            </p>
        </div>
    </div>
    <div class="row top-buffer" style="min-height: 150px; vertical-align: top; text-align:center;">
        {{#if view.hasKey}}
            <div class="form-group align-left no-padding" style=" width: 30%; float:none; display: inline-block;">
                <div class="col-md-2 valign-middle">
                    <i class="fa fa-key fa-3x text-gray" style="margin: 5px 10px 0 0"></i>
                </div>
                <div class="col-md-10">
                    <h4 class="text-bold">AKIRIX KEY</h4>

                    <p>You can use your Akirix Key that's registered to your account.</p>

                    <p>Plug in the key into your computer's USB port then press the gold button.</p>
                </div>
            </div>
        {{/if}}

        {{#if view.hasApp}}
            <div class="form-group align-left no-padding" style=" width: 30%; float:none; display: inline-block;">
                <div class="col-md-2">
                    <i class="fa fa-mobile fa-3x text-gray" style="margin: 5px 10px 0 0"></i>
                </div>
                <div class="col-md-10">
                    <h4>APP</h4>

                    <p>You can use the code generated by the Akirix Security App on your mobile devices.</p>

                    <p>
                        <a href="https://itunes.apple.com/us/app/akirix-security/id712692282" target="_blank"><i
                                class="fa fa-apple fa-2x text-blue" style="margin: 0 10px 0 0"></i></a>
                        <a href="https://play.google.com/store/apps/details?id=com.akirix.token&hl=en"
                           target="_blank"><i class="fa fa-android fa-2x text-green" style="margin: 0 10px 0 0"></i></a>
                    </p>
                </div>
            </div>
        {{/if}}

        {{#if view.hasVoice}}
            <div class="form-group align-left no-padding" style=" width: 30%; float:none; display: inline-block;">
                <div class="col-md-2">
                    <i class="fa fa-volume-control-phone fa-3x text-gray" style="margin: 5px 10px 0 0"></i>
                </div>
                <div class="col-md-10">
                    <h4>Voice</h4>
                    <p>Use stored voice profile.</p>
                    <p>
                        {{#if view.isCalling}}
                            <button class="btn btn-sm btn-primary" disabled="disabled">
                                Calling You Now...
                            </button>
                        {{else}}
                            {{view 'select'
                            value=view.authenticator_id
                            content=view.voices
                            optionValuePath='content.id'
                            optionLabelPath='content.name'
                            prompt='Select a voice profile'
                            class='form-control'
                            }}
                            {{#if view.authenticator_id}}
                                <br/>
                                <button class="btn btn-sm btn-success" {{action 'voiceCall' target='view'}}>
                                    Call Me Now
                                </button>
                            {{/if}}
                        {{/if}}
                    </p>
                </div>
            </div>
        {{/if}}

        <div class="form-group align-left no-padding" style=" width: 30%; float:none; display: inline-block;">
            <div class="col-md-2">
                <i class="fa fa-comment fa-3x text-gray" style="margin: 5px 10px 0 0"></i>
            </div>
            <div class="col-md-10">
                <h4>SMS</h4>

                <p>You can request the code to be sent to the mobile device you have on file with us.</p>

                <p>
                    <button class="btn btn-sm btn-success" {{action 'twoFactorSms' target='view'}}>
                        Request Code via SMS
                    </button>
                </p>
            </div>
        </div>
    </div>


    <div class="row top-buffer">
        <div class="col-md-4 col-center form-group has-feedback">
            {{input value=view.code type='password' class='form-control' placeholder='Enter Code Here' data-toggle="tooltip" data-original-title=view.errors.code autofocus='autofocus'}}
            {{validation-feedback errors=view.errors.code validated=view.validated}}
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 col-center form-group">
            <button class="btn btn-lg btn-primary btn-block"
                    type="button" {{action 'authenticate' target='view'}}>
                Authenticate
            </button>
        </div>
    </div>

    <div class="text-center">
        <ul class="list-h">
            <li><a {{action 'cancelTwoFactorPane' target='view'}} href="javascript:void(0)" class="text-orange">Cancel
                &amp; Go
                Back</a>
            </li>
        </ul>
    </div>
</fieldset>

